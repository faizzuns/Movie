<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.user.movieproject.MainActivity"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GunMetal"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/FrameUtama">

        <ImageView
            android:id="@+id/image_utama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/ababa" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/ababa2" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--NEWS--"
        android:textSize="@dimen/size_news"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/marginTop_news"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tinggi_news"
        android:id="@+id/news_layout"
        android:layout_marginTop="@dimen/marginTop_news"
        android:layout_marginLeft="@dimen/marginSamping_news"
        android:layout_marginRight="@dimen/marginSamping_news"
        android:background="@color/GrayDolphin"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_news"></ListView>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/marginSamping_news"
        android:layout_marginRight="@dimen/marginSamping_news"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:text="View More.."
        android:textSize="10sp"
        android:background="@color/GrayDolphin"
        android:id="@+id/btn_news"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--TOP MOVIES--"
        android:textColor="@android:color/white"
        android:textStyle="italic|bold"
        android:textSize="@dimen/size_news"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/marginTop_news"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/marginTop_news"
        android:layout_height="170dp"
        android:id="@+id/rv_top_movie"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/btn_lebar_allmov"
            android:layout_height="wrap_content"
            android:background="@color/GrayDolphin"
            android:textColor="@android:color/white"
            android:text="all movie"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="11dp"
            android:id="@+id/btn_see_all"/>
        <Button
            android:layout_width="@dimen/btn_lebar_allmov"
            android:layout_height="wrap_content"
            android:background="@color/GrayDolphin"
            android:textColor="@android:color/white"
            android:text="theater"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:id="@+id/btn_see_theater"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_footer"
        android:background="@color/GrayDolphin"
        android:layout_marginTop="@dimen/marginTop_news"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="instagram : @CinemaXIX"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/margin_text_news"
                android:layout_marginTop="@dimen/margin_text_news"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="e-mail        : cinema.XIX@gmail.com"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/margin_text_news"
                android:layout_marginTop="@dimen/margin_text_news"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="facebook  : Cinema XIX"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/margin_text_news"
                android:layout_marginTop="@dimen/margin_text_news"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="contact       : (021)8209428"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/margin_text_news"
                android:layout_marginTop="@dimen/margin_text_news"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/mtix"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageView"
                android:id="@+id/imageView2" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/imax"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/dolby"
                android:scaleType="fitXY"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_marginTop="15dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>
